<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tutorial_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/tutorial_popup_image"
        android:layout_width="fill_parent" android:layout_height="0dip"
        android:paddingLeft="5dp" android:paddingRight="5dp"
        android:layout_marginTop="5px" android:layout_marginBottom="5px"
        android:scaleType="fitXY"
        android:layout_weight="0.9"/>
    
     <Button android:id="@+id/tutorial_close_button"
             android:layout_width="fill_parent" android:layout_height="0dip"
             android:layout_weight="0.1" android:text="Close" />
    
</LinearLayout>
