        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/levelMinesEndInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_mines_end"
            android:textOff="@string/level_mines_end"
            android:textOn="@string/level_mines_end"/>

        <ToggleButton
            android:id="@+id/levelSokobanInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_sokoban"
            android:textOff="@string/level_sokoban"
            android:textOn="@string/level_sokoban"/>

        <ToggleButton
            android:id="@+id/levelLudiosInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_ludios"
            android:textOff="@string/level_ludios"
            android:textOn="@string/level_ludios"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/levelRogueInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_rogue"
            android:textOff="@string/level_rogue"
            android:textOn="@string/level_rogue"/>

        <ToggleButton
            android:id="@+id/levelQuestInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_quest"
            android:textOff="@string/level_quest"
            android:textOn="@string/level_quest"/>

        <ToggleButton
            android:id="@+id/levelMedusaInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_medusa"
            android:textOff="@string/level_medusa"
            android:textOn="@string/level_medusa"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/levelCastleInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_castle"
            android:textOff="@string/level_castle"
            android:textOn="@string/level_castle"/>

        <ToggleButton
            android:id="@+id/levelGehennomInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_gehennom"
            android:textOff="@string/level_gehennom"
            android:textOn="@string/level_gehennom"/>

        <ToggleButton
            android:id="@+id/levelValleyInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_valley"
            android:textOff="@string/level_valley"
            android:textOn="@string/level_valley"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ToggleButton
            android:id="@+id/levelAzmodeusInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_azmodeus"
            android:textOff="@string/level_azmodeus"
            android:textOn="@string/level_azmodeus"/>

        <ToggleButton
            android:id="@+id/levelJuiblexInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_juiblex"
            android:textOff="@string/level_juiblex"
            android:textOn="@string/level_juiblex"/>

        <ToggleButton
            android:id="@+id/levelBaazlebubInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_baalzebub"
            android:textOff="@string/level_baalzebub"
            android:textOn="@string/level_baalzebub"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ToggleButton
            android:id="@+id/levelOrcusTownInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_orcus_town"
