<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="@string/level_level"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/level_parent" />

        <Spinner
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:id="@+id/levelParentInput" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:layout_gravity="center_vertical"
            android:text="@string/level_num" />

        <Spinner
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:id="@+id/levelNumInput"/>
    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/level_stores"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/levelStoreInput"
            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:text="@string/level_store"
            android:textOff="@string/level_store"
            android:textOn="@string/level_store"/>

        <ToggleButton
            android:id="@+id/levelArmorStoreInput"
            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:text="@string/level_armor_store"
            android:textOff="@string/level_armor_store"
            android:textOn="@string/level_armor_store"/>

        <ToggleButton
            android:id="@+id/levelBookStoreInput"
            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:text="@string/level_bookstore"
            android:textOff="@string/level_bookstore"
            android:textOn="@string/level_bookstore"/>

        <ToggleButton
            android:id="@+id/levelLiquorStoreInput"
            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:text="@string/level_liquor_shop"
            android:textOff="@string/level_liquor_shop"
            android:textOn="@string/level_liquor_shop"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/levelWeaponShopInput"
            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:text="@string/level_weapon_shop"
            android:textOff="@string/level_weapon_shop"
            android:textOn="@string/level_weapon_shop"/>

        <ToggleButton
            android:id="@+id/levelDelicatessanInput"
            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:text="@string/level_delicatessan"
            android:textOff="@string/level_delicatessan"
            android:textOn="@string/level_delicatessan"/>

        <ToggleButton
            android:id="@+id/levelJewelerInput"
            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
