            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:text="@string/level_rare_book_store"
            android:textOff="@string/level_rare_book_store"
            android:textOn="@string/level_rare_book_store"/>

