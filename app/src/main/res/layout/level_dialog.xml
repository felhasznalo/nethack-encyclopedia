            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:text="@string/level_apparel_shop"
            android:textOff="@string/level_apparel_shop"
            android:textOn="@string/level_apparel_shop"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/levelHardwareStoreInput"
            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:text="@string/level_hardware_store"
            android:textOff="@string/level_hardware_store"
            android:textOn="@string/level_hardware_store"/>

        <ToggleButton
