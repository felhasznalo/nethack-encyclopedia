        <EditText
            android:layout_marginRight="5dp"
            android:id="@+id/levelTemplesInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:ems="10" />

        <TextView
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/level_stash" />

        <ToggleButton
            android:layout_marginRight="5dp"
            android:id="@+id/levelStashInput"
            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:text="@string/level_stash"
            android:textOff="@string/level_stash"
            android:textOn="@string/level_stash"/>
    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/level_special"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/levelOracleInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_oracle"
            android:textOff="@string/level_oracle"
            android:textOn="@string/level_oracle"/>

        <ToggleButton
            android:id="@+id/levelMinesInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_mines"
            android:textOff="@string/level_mines"
            android:textOn="@string/level_mines"/>

        <ToggleButton
            android:id="@+id/levelMineTownInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_minetown"
            android:textOff="@string/level_minetown"
            android:textOn="@string/level_minetown"/>
    </LinearLayout>

    <LinearLayout
