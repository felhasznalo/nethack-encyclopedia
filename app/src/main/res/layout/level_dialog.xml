            android:id="@+id/levelVladInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_vlad"
            android:textOff="@string/level_vlad"
            android:textOn="@string/level_vlad"/>
