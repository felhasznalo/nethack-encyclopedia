            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:text="@string/level_lighting_store"
            android:textOff="@string/level_lighting_store"
            android:textOn="@string/level_lighting_store"/>

        <!--intentionally blank -->
        <TextView
            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"/>
    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/level_features"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/level_fountains" />

        <EditText
            android:layout_marginRight="5dp"
            android:id="@+id/levelFountainsInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:ems="10" />

        <TextView
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/level_aligned_altars" />

        <EditText
            android:layout_marginRight="5dp"
            android:id="@+id/levelAlignedAltarsInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
