        <ToggleButton
            android:id="@+id/levelFakeWizardsTowerInput"
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="fill_parent"
            android:text="@string/level_fake_wizards_tower"
            android:textOff="@string/level_fake_wizards_tower"
            android:textOn="@string/level_fake_wizards_tower"/>
