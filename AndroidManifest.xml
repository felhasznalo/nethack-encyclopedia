          </intent-filter>
        </activity>
        <activity android:name="org.morsi.android.nethack.redux.TutorialPopup"
                  android:label="@string/app_name">
          <intent-filter>
              <action android:name="android.intent.action.MAIN"/>
          </intent-filter>
        </activity>
    </application>
</manifest>
